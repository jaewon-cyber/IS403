<!DOCTYPE html>
<html>
<head>
    <title>Edit Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --byu-navy: #002e5d;
            --byu-white: #ffffff;
            --byu-accent: #0a4a8a;
        }

        body {
            background: linear-gradient(135deg, var(--byu-navy), var(--byu-accent));
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--byu-navy);
            animation: gradientShift 8s ease infinite;
        }

        .profile-card {
            background: var(--byu-white);
            padding: 2rem;
            border-radius: 1.25rem;
            width: 600px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            border-top: 8px solid var(--byu-navy);
        }
        .btn-custom {
            background-color: var(--byu-navy) !important; /* make sure it overrides Bootstrap */
            color: var(--byu-white) !important;
            border: none;
            border-radius: 0.5rem;
            padding: 0.6rem 1.5rem;
            font-size: 1rem;
            margin: 0.5rem 0;
            transition: background-color 0.2s ease;
        }

        .btn-custom:hover {
            background-color: var(--byu-accent) !important;
        }
        .scrollable-courses {
            max-height: 200px;       /* Adjust height as needed */
            overflow-y: auto;        /* Enable vertical scroll */
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 0.5rem;
            background-color: #f8f9fa;
        }
        .course-item {
            margin-bottom: 0.3rem;
        }
    </style>
</head>

<body>

<div class="profile-card">
    <h2 class="text-center mb-3">Edit Profile</h2>

    <form action="/editProfile" method="POST">
    <!-- Personal Info -->
    <div class="mb-3">
        <label>First Name:</label>
        <input name="stud_first_name" class="form-control" value="<%= student.stud_first_name %>" required>
    </div>

    <div class="mb-3">
        <label>Last Name:</label>
        <input name="stud_last_name" class="form-control" value="<%= student.stud_last_name %>" required>
    </div>

    <div class="mb-3">
        <label>Email:</label>
        <input name="stud_email" class="form-control" value="<%= student.stud_email %>" required>
    </div>

    <div class="mb-3">
        <label>Phone:</label>
        <input name="stud_phone_number" class="form-control" value="<%= student.stud_phone_number %>">
    </div>

    <div class="mb-3">
        <label>Gender:</label>
        <input name="stud_gender" class="form-control" value="<%= student.stud_gender %>">
    </div>

    <div class="mb-3">
        <label>Age:</label>
        <input name="stud_age" type="number" class="form-control" value="<%= student.stud_age %>">
    </div>

    <!-- Enrolled Courses -->
    <h3>Edit Your Courses</h3>

    <form action="/editCourses" method="POST">
        <div id="courseList" class="scrollable-courses">
            <% allCourses.forEach(course => { %>
            <div class="course-item">
                <input type="checkbox" name="courses" value="<%= course.course_id %>"
                <%= studentCoursesIds.includes(course.course_id) ? 'checked' : '' %> >
                <%= course.subject_code %> <%= course.course_number %> - <%= course.semester %> <%= course.year %>
            </div>
            <% }) %>
        </div>
     <button class="btn btn-custom mt-3 w-100">Save Changes</button>
    </form>
    <a href="/profile" class="btn btn-secondary w-100 mt-3">Cancel</a>
</div>

</body>
</html>

